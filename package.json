{
  "devDependencies": {
    "lerna": "^2.0.0",
    "theo-cli": "file:./tools/theo-cli"
  },
  "scripts": {
    "ottheme-build": "lerna exec --scope ottheme-* theo scss",
    "otkit-build": "lerna exec --scope otkit-* theo cssmodules.css",
    "build": "npm run ottheme-build && npm run otkit-build",
    "postinstall": "lerna bootstrap",
    "clean": "lerna clean",
    "publish": "lerna publish"
  }
}
